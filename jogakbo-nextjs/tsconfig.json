{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {"@/*": ["./src/*"]}
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/OAuth/Google.js",
    "src/components/Admin/Posts.js",
    "styles/GlobalStyle.js",
    "src/api/useKaikas.js",
    "src/components/utils/refreshTokenSetup.js",
    "src/api/UseCaver.js",
    "src/pages/image.js",
    "src/components/admin/VerifyCampaignModal.js",
    "src/api/UseKlip.js"
  ],
  "exclude": ["node_modules"]
}
